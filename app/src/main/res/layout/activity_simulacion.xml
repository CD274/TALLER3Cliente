<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

  <!-- Spinner para seleccionar la carrera -->
  <Spinner
      android:id="@+id/spinnerCarreras"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp" />

  <!-- Botón para iniciar la simulación -->
  <Button
      android:id="@+id/btnIniciarSimulacion"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/spinnerCarreras"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="16dp"
      android:text="Iniciar Simulación" />

  <!-- ScrollView para mostrar los resultados -->
  <ScrollView
      android:id="@+id/scrollViewResultados"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/btnIniciarSimulacion"
      android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado de la simulación aparecerá aquí"
        android:textSize="16sp"
        android:padding="8dp" />
  </ScrollView>

</RelativeLayout>
